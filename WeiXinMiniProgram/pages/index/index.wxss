.container{

}
.search{
  position: fixed;
  top:0;
  width: 750rpx;
  display: flex;
  padding-left: 100rpx;
  background-color: white;
  height:100rpx;
  z-index:2;
}
.word-input{
  width: 500rpx;
  height: 60rpx;
  padding: 10rpx 10rpx;
  font-size: 40rpx;
  border: 1px solid gray;
}
.search-button{
  margin-left: 10rpx;
  height: 85rpx;
}
.content{
  position: absolute;
  top:100rpx;
  left:0rpx;
  padding:0 30rpx;
  z-index: 0;
}
.divider{
  left:0;
  right:0;
  height: 2rpx;
  margin: 20rpx 5rpx;
  background-color: gray;
}
.modify-note{
  padding:0 10rpx;
  font-size: 28rpx;
  position: absolute;
  width:160rpx;
  height: 70rpx;
  right: 30rpx;
  top: 10rpx; 
}